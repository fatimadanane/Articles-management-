<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Alimentations</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="articles" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Articles
            </NavLink>
        </div>
      
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="alimentation">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Alimentations
            </NavLink>
        </div>
       
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="depa">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Dépots
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
